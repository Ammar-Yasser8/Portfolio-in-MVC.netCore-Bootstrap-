@using DEPI_MVC.Models
@model HomeModel
@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<section class="bg-light text-dark p-5 text-center text-sm-start">
    <div class="container">
        <div class="d-sm-flex align-items-center justify-content-between">
            <div>
                <h1>Hello, I'm <span class="text-primary">@Model.Name</span></h1>
                <p class="lead my-4">
                    @Model.Description
                </p>
                <a href="/Home/Projects" class="btn btn-primary btn-lg">View My Work</a>
            </div>
            <img class="img-fluid w-50 d-none d-sm-block rounded-circle shadow-lg" src="~/img/Ammar.jpg" alt="Ammar Yasser">
        </div>
    </div>
</section>
